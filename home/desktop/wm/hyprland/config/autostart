notify-send "Hello glhost! ðŸ˜ˆ"

if [[ ! `pidof waybar` ]]; then
       waybar &
fi

# mpd
if [[ ! `pidof mpd` ]]; then
        mpd ~/.config/mpd/mpd.conf && mpDris2 -c ~/.config/mpDris2/mpDris2.conf &
fi

